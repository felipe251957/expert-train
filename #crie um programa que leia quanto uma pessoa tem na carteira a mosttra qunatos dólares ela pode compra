real = float(input('Quando dinheiro você tem na carteira? '))
dolar = real / 5.51
print('com R${:.2f} você pode comprar US${:.2f}'.format(real, dolar))

dolar1 = float(input('Quantos dolares você tem na carteira? '))
real1 = dolar1 / 1
print('Com R${:.2f} você pode comprar R${:.2f}'.format(dolar1, real1))
